{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  name: \"LoginComponent\",\n  data() {\n    return {\n      email: \"\",\n      password: \"\",\n      error: null,\n      isLoading: false,\n      // Add a loading state\n      isVisible: true\n    };\n  },\n  methods: {\n    async handleLogin() {\n      this.isLoading = true;\n      try {\n        const response = await axios.post('http://localhost:5555/login', {\n          email: this.email,\n          password: this.password\n        }, {\n          withCredentials: true\n        });\n        this.isLoading = false;\n        const userRole = response.data.role;\n        localStorage.setItem('userRole', userRole); // Store role in localStorage\n\n        if (userRole === 'admin') {\n          this.$router.push('/admin/dashboard');\n        } else if (userRole === 'client') {\n          this.$router.push('/home');\n        } else {\n          this.error = 'Unknown role. Please contact support.';\n        }\n      } catch (err) {\n        this.isLoading = false;\n        this.error = err.response?.data?.message || \"Login failed. Please try again.\";\n      }\n    },\n    goToSignUp() {\n      this.isVisible = false; // Trigger fade-out\n      setTimeout(() => {\n        this.$router.push(\"/signup\"); // Navigate to the sign-up page\n      }, 600); // Matches the transition duration\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","email","password","error","isLoading","isVisible","methods","handleLogin","response","post","withCredentials","userRole","role","localStorage","setItem","$router","push","err","message","goToSignUp","setTimeout"],"sources":["C:\\laragon\\www\\project_appdev\\Frontend\\src\\views\\loginview.vue"],"sourcesContent":["<template>\n  <transition name=\"fade-scale-slide\">\n    <section class=\"login-section\" v-if=\"isVisible\">\n      <div class=\"container\">\n        <!-- Left Section: Image -->\n        <div class=\"image-section\"></div>\n\n        <!-- Right Section: Login Form -->\n        <div class=\"login-card shadow rounded-3 p-4\">\n          <!-- Logo -->\n          <div class=\"text-center mb-4\">\n            <img\n              src=\"https://media.istockphoto.com/vectors/user-member-vector-icon-for-ui-user-interface-or-profile-face-avatar-vector-id1130884625?k=6&m=1130884625&s=170667a&w=0&h=b4ICEL-2imqnsT-m2tYGxZdxlgD1yKxmoDA-PmPc2-A=\"\n              alt=\"Logo\" class=\"logo mb-2\" />\n            <h2 class=\"fs-4 fw-bold text-primary\">Sign In</h2>\n          </div>\n\n          <!-- Display Error Message -->\n          <div v-if=\"error\" class=\"alert alert-danger\" role=\"alert\">\n            {{ error }}\n          </div>\n\n          <!-- Login Form -->\n          <form @submit.prevent=\"handleLogin\">\n            <!-- Email Input -->\n            <div class=\"form-floating mb-3\">\n              <input type=\"email\" class=\"form-control\" v-model=\"email\" id=\"email\" placeholder=\"name@example.com\"\n                required />\n              <label for=\"email\">Email</label>\n            </div>\n\n            <!-- Password Input -->\n            <div class=\"form-floating mb-3\">\n              <input type=\"password\" class=\"form-control\" v-model=\"password\" id=\"password\" placeholder=\"Password\"\n                required />\n              <label for=\"password\">Password</label>\n            </div>\n\n            <!-- Log In Button -->\n            <div class=\"d-grid\">\n              <button class=\"btn btn-primary btn-lg\" type=\"submit\">Log In</button>\n            </div>\n          </form>\n\n          <!-- Forgot Password and Sign Up Links -->\n          <div class=\"text-center mt-3\">\n            <router-link to=\"/forgot-password\" class=\"text-primary small\">Forgot Password?</router-link>\n          </div>\n          <div class=\"text-center mt-2\">\n            <span class=\"small\">Donâ€™t have an account? </span>\n            <a href=\"javascript:void(0)\" @click=\"goToSignUp\" class=\"text-primary small\">Sign Up</a>\n          </div>\n        </div>\n      </div>\n    </section>\n  </transition>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"LoginComponent\",\n  data() {\n    return {\n      email: \"\",\n      password: \"\",\n      error: null,\n      isLoading: false, // Add a loading state\n      isVisible: true,\n    };\n  },\n  methods: {\n    async handleLogin() {\n      this.isLoading = true;\n      try {\n        const response = await axios.post('http://localhost:5555/login', {\n          email: this.email,\n          password: this.password,\n        }, { withCredentials: true });\n\n        this.isLoading = false;\n        const userRole = response.data.role;\n        localStorage.setItem('userRole', userRole); // Store role in localStorage\n\n        if (userRole === 'admin') {\n          this.$router.push('/admin/dashboard');\n        } else if (userRole === 'client') {\n          this.$router.push('/home');\n        } else {\n          this.error = 'Unknown role. Please contact support.';\n        }\n      } catch (err) {\n        this.isLoading = false;\n        this.error = err.response?.data?.message || \"Login failed. Please try again.\";\n      }\n    }\n    ,\n    goToSignUp() {\n      this.isVisible = false; // Trigger fade-out\n      setTimeout(() => {\n        this.$router.push(\"/signup\"); // Navigate to the sign-up page\n      }, 600); // Matches the transition duration\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Global Styles */\nbody {\n  margin: 0;\n  font-family: \"Poppins\", sans-serif;\n  background-color: #f9f9f9;\n  color: #333;\n}\n\n/* Announcement Bar */\n.announcement-bar {\n  background-color: #f4511e;\n  color: #fff;\n  text-align: center;\n  padding: 10px;\n  font-size: 14px;\n  font-weight: bold;\n}\n\n/* Header */\n.header {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  padding: 20px 50px;\n  background: #fff;\n  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);\n}\n\n.logo {\n  font-size: 28px;\n  font-weight: bold;\n  color: #f4511e;\n}\n\n.nav {\n  display: flex;\n  gap: 20px;\n}\n\n.nav-link {\n  text-decoration: none;\n  color: #333;\n  font-weight: 500;\n  padding: 5px;\n  transition: color 0.3s ease-in-out;\n}\n\n.nav-link:hover,\n.nav-link.active {\n  color: #f4511e;\n  font-weight: bold;\n}\n\n/* User Menu */\n.user-menu {\n  position: relative;\n  display: inline-block;\n}\n\n.user-avatar {\n  width: 40px;\n  height: 40px;\n  border-radius: 50%;\n  cursor: pointer;\n  transition: transform 0.2s ease-in-out, border-color 0.3s ease-in-out;\n}\n\n.user-avatar:hover {\n  transform: scale(1.1);\n}\n\n.user-menu .dropdown {\n  display: none;\n  position: absolute;\n  top: 100%; /* Open below the user avatar */\n  right: 0;\n  background: #fff;\n  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);\n  border-radius: 8px;\n  overflow: hidden;\n  z-index: 10;\n  min-width: 150px;\n  animation: slideIn 0.3s ease-in-out;\n  opacity: 0;\n  visibility: hidden;\n}\n\n.user-menu:hover .dropdown,\n.user-menu .dropdown.show {\n  display: block;\n  opacity: 1;\n  visibility: visible;\n}\n\n.dropdown a {\n  display: block;\n  padding: 10px 15px;\n  text-decoration: none;\n  font-size: 14px;\n  color: #333;\n  transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;\n}\n\n.dropdown a:hover {\n  background-color: #f4511e;\n  color: #fff;\n}\n\n.dropdown a:first-child {\n  border-bottom: 1px solid #eee;\n}\n\n@keyframes slideIn {\n  from {\n    transform: translateY(-10px);\n  }\n  to {\n    transform: translateY(0);\n  }\n}\n\n\n/* Banner Section */\n.banner {\n  display: flex;\n  align-items: center;\n  justify-content: space-between;\n  padding: 50px;\n  background-color: #fff;\n  border-radius: 8px;\n  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);\n  margin: 30px auto;\n  max-width: 1200px;\n}\n\n.content {\n  max-width: 50%;\n}\n\n.collection {\n  color: #f4511e;\n  text-transform: uppercase;\n  font-weight: bold;\n  margin-bottom: 10px;\n}\n\nh1 {\n  font-size: 40px;\n  color: #333;\n}\n\n.description {\n  margin: 20px 0;\n  font-size: 16px;\n  color: #666;\n}\n\n.cta-button {\n  background-color: #f4511e;\n  color: #fff;\n  padding: 12px 24px;\n  border: none;\n  border-radius: 5px;\n  font-size: 16px;\n  text-decoration: none;\n  display: inline-block;\n  transition: background-color 0.3s ease-in-out;\n}\n\n.cta-button:hover {\n  background-color: #d63b10;\n}\n\n.image img {\n  max-width: 400px;\n  height: auto;\n  border-radius: 10px;\n}\n\n/* Featured Products */\n.featured-products {\n  text-align: center;\n  padding: 50px 20px;\n  background-color: #fff;\n  border-radius: 8px;\n  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);\n  margin: 30px auto;\n  max-width: 1200px;\n}\n\n.featured-products h2 {\n  font-size: 28px;\n  color: #333;\n  margin-bottom: 30px;\n}\n\n.product-list {\n  display: grid;\n  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));\n  gap: 20px;\n}\n\n.product-card {\n  background: #fff;\n  border: 1px solid #eee;\n  border-radius: 8px;\n  padding: 15px;\n  text-align: center;\n  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);\n  transition: transform 0.2s;\n}\n\n.product-card:hover {\n  transform: translateY(-5px);\n}\n\n.product-image {\n  width: 100%;\n  height: 150px;\n  object-fit: cover;\n  border-radius: 5px;\n}\n\n.product-title {\n  font-size: 16px;\n  font-weight: bold;\n  margin: 10px 0;\n}\n\n.product-price {\n  color: #f4511e;\n  font-size: 14px;\n}\n\n/* Footer */\n.footer {\n  background-color: #fff;\n  padding: 30px 20px;\n  text-align: center;\n  border-top: 2px solid #f4511e;\n}\n\n.footer-contact {\n  margin-bottom: 15px;\n}\n\n.footer-contact h4 {\n  margin-bottom: 5px;\n  color: #333;\n}\n\n.footer-bottom {\n  font-size: 12px;\n  color: #666;\n}\n</style>"],"mappings":";AA2DA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,